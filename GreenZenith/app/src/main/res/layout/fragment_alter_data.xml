<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#94B194"
    android:gravity="center"
    tools:context=".AlterData">

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="#FDFDFD"
        android:clipToOutline="true"
        android:elevation="10dp"
        android:orientation="vertical"
        android:padding="20dp">

        <!-- Título del formulario -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="16dp"
            android:background="#ECF3E1"
            android:backgroundTint="#ECF3E1"
            android:fontFamily="sans-serif-medium"
            android:paddingHorizontal="16dp"
            android:paddingVertical="8dp"
            android:text="Alterar datos"
            android:textColor="#5E695E"
            android:textSize="24sp" />

        <ImageView
            android:id="@+id/iV_pfp"
            android:layout_width="139dp"
            android:layout_height="111dp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/pfp" />

        <EditText
            android:id="@+id/alter_user"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:background="#D9DBD9"
            android:hint="E-mail"
            android:padding="8dp" />

        <EditText
            android:id="@+id/alter_pass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:background="#D9DBD9"
            android:hint="Contraseña"
            android:padding="8dp" />

        <Button
            android:id="@+id/btn1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:backgroundTint="#94BE95"
            android:elevation="5dp"
            android:fontFamily="sans-serif-medium"
            android:paddingHorizontal="32dp"
            android:paddingVertical="12dp"
            android:layout_marginTop="30dp"
            android:text="GUARDAR" />

        <Button
            android:id="@+id/btn2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:backgroundTint="#94BE95"
            android:elevation="5dp"
            android:fontFamily="sans-serif-medium"
            android:paddingHorizontal="32dp"
            android:paddingVertical="12dp"
            android:text="CANCELAR" />
    </LinearLayout>


</FrameLayout>