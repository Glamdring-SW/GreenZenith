<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#C3D7A3"
    tools:context=".CreatePlants">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="#F1F3EC"
            android:clipToOutline="true"
            android:elevation="10dp"
            android:orientation="vertical"
            android:padding="10dp">



            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:background="@drawable/title_background"
                android:paddingHorizontal="20dp"
                android:paddingVertical="10dp"
                android:text="Crear Planta"
                android:layout_gravity="center_horizontal"
                android:textColor="#FFFFFF"
                android:textSize="24sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/iV_plantPH"
                android:layout_width="109dp"
                android:layout_height="94dp"
                android:layout_marginBottom="10dp"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/plant_placeholder" />


            <EditText
                android:id="@+id/name_edit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Nombre"
                android:background="@drawable/edittext_background"
                android:padding="12dp"
                android:layout_marginBottom="12dp"
                android:textColorHint="#CCCCCC"
                android:textColor="#FFFFFF" />

            <!-- Campo de Descripción -->
            <EditText
                android:id="@+id/description_edit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Descripcion"
                android:background="@drawable/edittext_background"
                android:padding="12dp"
                android:layout_marginBottom="16dp"
                android:textColorHint="#CCCCCC"
                android:textColor="#FFFFFF" />

            <!-- Selector de Horas y Minutos -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="8dp"
                android:text="Horario de Riego"
                android:textColor="#5B554E"
                android:textSize="16sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginBottom="16dp">

                <Spinner
                    android:id="@+id/hour"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/spinner_background"
                    android:padding="8dp" />

                <Spinner
                    android:id="@+id/minute"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/spinner_background"
                    android:padding="8dp" />
            </LinearLayout>

            <!-- Lista de Días -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="8dp"
                android:text="DIAS"
                android:textColor="#5B554E"
                android:textSize="16sp"
                android:textStyle="bold" />

            <ListView
                android:id="@+id/listViewDays"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:divider="#FFFFFF"
                android:dividerHeight="1dp"
                android:background="#FEFEFE" />

            <!-- Botón Crear -->
            <Button
                android:id="@+id/btnConfirm"
                android:layout_marginTop="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="8dp"
                android:backgroundTint="#E4ECD7"
                android:elevation="5dp"
                android:fontFamily="sans-serif-medium"
                android:paddingHorizontal="32dp"
                android:paddingVertical="12dp"
                android:text="CREAR"
                android:textColor="#5B554E" />
        </LinearLayout>
    </ScrollView>
</FrameLayout>
